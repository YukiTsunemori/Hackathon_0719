<div class="card text-center">
  <div class="card-body">
    <p class="card-text">
      <%= simple_form_for @post do |f| %>
        <%= f.textarea :text, placeholder: "今日は何をつぶやきますか？", class: "form-control" %>
        <%#= f.hidden_field :user_id, :value => current_user.id %>
        <%= f.button :submit, "Submit", class: "btn btn-primary" %>
      <% end %>
    </p>
  </div>
</div>
